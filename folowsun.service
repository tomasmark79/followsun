[Unit]
Description=Folowsun - GNOME theme switcher based on sunrise/sunset
After=graphical-session.target
PartOf=graphical-session.target

[Service]
Type=simple
Environment="CONFIG_DIR=%h/.config/folowsun"
ExecStartPre=/bin/sh -c 'mkdir -p ${CONFIG_DIR}'
ExecStart=/home/tomas/dev/bash/folowsun/folowsun.sh --daemon
Restart=on-failure
RestartSec=30

[Install]
WantedBy=graphical-session.target